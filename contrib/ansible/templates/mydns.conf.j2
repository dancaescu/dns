# MyDNS Configuration File
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Database configuration
db-host = {{ mysql_host }}
db-user = {{ mysql_user }}
db-password = {{ mysql_password }}
database = {{ mysql_database }}

# Server configuration
user = {{ mydns_user }}
listen = *
no-listen = ::

# DNS settings
allow-axfr = {{ mydns_allow_axfr | default('no') }}
allow-tcp = {{ mydns_allow_tcp | default('yes') }}
allow-update = {{ mydns_allow_update | default('no') }}
recursive = {{ mydns_recursive | default('no') }}

# Cache settings
cache-size = {{ mydns_cache_size | default('1024') }}
cache-expire = {{ mydns_cache_expire | default('60') }}

# Timeout
timeout = {{ mydns_timeout | default('30') }}

# Logging
#log = LOG_DAEMON
#log = LOG_INFO

# PID file
pidfile = /run/mydns/mydns.pid
