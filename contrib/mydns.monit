# Monit configuration snippet to supervise MyDNS
check process mydns with pidfile /run/mydns/mydns.pid
  start program = "/bin/systemctl start mydns.service"
  stop program  = "/bin/systemctl stop mydns.service"
  if failed host 127.0.0.1 port 53 type udp protocol dns then restart
  if 5 restarts within 5 cycles then unmonitor
